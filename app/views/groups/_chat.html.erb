<% if !@user.nil? %>
  <% @messages.each do |message| %>
    <br><strong><%= message.user.username %></strong>
    <%= message.content %> <br>
    <%= message.comments.count %>
    <% message.comments.each do |comment| %>
      <%= comment.name %>
      <%= comment.body %><br>
    <% end %>
    <%= form_for([message, message.comments.build]) do |f| %>
      <p>
        <%= f.label :name %>
        <input type="text" name="message[name]" id="message_name" value="<%= current_user.username %>">
      </p>
      <!-- <input type="hidden" name="message[id]" id="message_id" value="<%= message.id %>"> -->
      <p>
        <%= f.label :body %><br/>
        <%= f.text_area :body %>
      </p>
      <br>
      <p>
        <%= f.submit %>
      </p>

    <% end %>
  <% end %>

  <%= form_with url: group_message_path(@group), method: 'post' do |f| %> 
    <p>
      Add message: <br>
      <%= f.text_area :content %>
    </p>
    <p>
      <%= f.submit "Send" %>
    </p>
  <% end %>
<% end %>