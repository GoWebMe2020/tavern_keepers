<% if !@user.nil? && @user.admin? %>
  <%= form_with url: group_games_path(@group) do |f| %>
    <h3>Schedule a game</h3>
    <%= f.label :date%><br>
    <%= f.date_field :date%>
    <br>
    <%= f.label :time%><br>
    <%= f.time_field :time%><br><br>
    <%= f.submit "Schedule game" %>
  <% end %>
<% end %>

<% @games.each do |game| %>
  <br>
  <%= game.date %>
  <br>
  <%= game.time.strftime("%k:%M") %>
  <br>
  <%= link_to 'Going', group_game_game_responds_path(@group.id, game.id), method: :post %>
  <%= game.game_responds.count %> Going
<% end %>