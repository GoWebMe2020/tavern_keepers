<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @group.name %>
</p>
<p>
  <strong>Users:</strong>
  <% if @users != nil %>
    <% @users.each do |user| %>
      <br><%= user.user.username %>
    <% end %>
  <% end %>
</p>

<%= link_to 'Edit', edit_group_path(@group) %> |
<%= link_to 'Back', groups_path %>
<br><br>
<% if !GroupUser.where(group_id: @group.id, user_id: current_user.id).exists? %>
  <%= button_to "Join", group_join_path(@group) %>
<% end %>


<% @messages.each do |message| %>
  <br><%= message.user.username %>
  <br><%= message.content %>
<% end %>

<%= form_with url: group_message_path(@group), method: 'post' do |f| %> 
  <p>
    Add message: <br>
    <%= f.text_area :message %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>